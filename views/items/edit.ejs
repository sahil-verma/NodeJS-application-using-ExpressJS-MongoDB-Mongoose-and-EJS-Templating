<% include ../partials/header.ejs %>

<main class="container">

<h1>Item Details</h1>

<form method="post">
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title: *</label>
        <input name="title" id="title" required value="<%= item.title %>" />
    </div>
    <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Description: *</label>
        <input name="description" id="description" required value="<%= item.description %>" />
    </div>
    <div class="form-group">
        <label for="price" class="col-sm-2 control-label">Price:</label>
        <input name="price" id="price" min="0.01" type="number" step="any" value="<%= item.price %>"  />
    </div>
    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

</main>

<% include ../partials/footer.ejs %>